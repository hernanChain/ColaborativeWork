<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Productos</title>
</head>
<body class="h-100" style="background-image: url(https://image.freepik.com/vector-gratis/fondo-comida-saludable_24877-620.jpg);">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-sm-8 align-self-center">
                <div class="card" style="border-color: darkred;">
                    <%- include('partials/menu.ejs') %>

                    <div class="card-body " style="border-color: darkred;">
                        <form action="/addProduct" method="post">
                            <div class="row col mb-3 justify-content-center">
                                <div class="col-sm-3">
                                    <input name="name" type="text" placeholder="Producto" class="form-control" required>
                                </div>
                                <div class="col-sm-3">
                                    <input name="stock" type="number" placeholder="Libras" class="form-control" required>
                                </div>
                                <div class="col-sm-3">
                                    <input name="price" type="number" placeholder="Precio por Libra" class="form-control" required>
                                </div>
                                <div class="col-sm-2">
                                    <button type="submit" class="btn btn-success" id="btn_add"><img type="image" src="https://image.flaticon.com/icons/png/512/67/67344.png" width="20" /></span></button>                                                
                                    
                                </div> 
                            </div>
                        </form>
                    </div>
                    <div class="row col mb-3 row justify-content-center">
                        <div class="col-sm-10">
                            <table class="table" style="background-color:#FFFFFF">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="border border-success text-center" style="color: darkred;">Producto</th>
                                        <th class="border border-success text-center" style="color: darkred;">Libras disponibles</th>
                                        <th class="border border-success text-center" style="color: darkred;">Precio/lb</th>
                                        <!-- <th class="border border-success text-center" style="color: darkred;">Eliminar</th> -->
                                    </tr>
                                </thead>
                                <tbody class="tbody">
                                    <% for(let item of products) {%>
                                        <tr>
                                            <form action="/toDelete" method="post">
                                                <input type="hidden" name="toDelete" value="<%= item.name %>">
                                                <td class="border border-success text-center"><%= item.name %></td>
                                                <td class="border border-success text-center"><%= item.stock%></td>
                                                <td class="border border-success text-center">$<%= item.price %></td>
                                                <!-- <td class="border border-success text-center">
                                                    <button type="submit" class="btn btn-danger"><img type="image" src="https://image.flaticon.com/icons/png/512/1837/1837363.png" width="30" height="20"/></span></button>                                                
                                                </td> -->
                                            </form>
                                        </tr>
                                    <%}%>         
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    
</body>
</html>